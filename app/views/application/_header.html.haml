#main-nav.navbar.navbar-fixed-top.withsidebar
  .pull-left
    %a.btn.btn-menu{:title => "Channels", :href => '#'}
      %i.icon-reorder
  = link_to "Friends Life", root_url, :class => 'brand'
  .sub-nav
    - if current_user
      .btn-group.pull-right.user-ico
        %a.btn.btn-inverse.dropdown-toggle{'data-toggle' => "dropdown",  :href => "#"}
          = image_tag current_user.avatar, :size => "24x24"
          %span.caret
        %ul.dropdown-menu
          = render partial: 'services'
          %li.divider
          %li
            = link_to "Profile", authentications_path
          %li.divider
          %li
            = link_to "Log Out", destroy_user_session_path, :method => :delete
    = link_to root_url, :class => 'btn btn-refresh' do
      %i.icon-refresh
    .btn-group
      = link_to root_url, :class => 'btn active' do
        %i.icon-home
      = link_to root_url, :class => 'btn' do
        %i.icon-star
      = link_to root_url, :class => 'btn' do
        %i.icon-user
      = link_to root_url, :class => 'btn' do
        %i.icon-heart