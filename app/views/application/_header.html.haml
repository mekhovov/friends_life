.navbar.navbar-fixed-top
  .navbar-inner
    .container-fluid
      %a.btn.btn-navbar{'data-toggle' => "collapse",  'data-target' => ".nav-collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "Friends Life", root_url, :class => 'brand'
      - if current_user
        .btn-group.pull-right
          %a.btn.btn-inverse.dropdown-toggle{'data-toggle' => "dropdown",  :href => "#"}
            = image_tag current_user.avatar, :size => "24x24"
            = current_user.name
            %span.caret
          %ul.dropdown-menu
            %li
              = link_to "Profile", authentications_path
            %li.divider
            %li
              = link_to "Log Out", destroy_user_session_path, :method => :delete
      .nav-collapse
        %ul.nav
          %li.active
            = link_to "Home", root_url
          %li
            = link_to "About", root_url
